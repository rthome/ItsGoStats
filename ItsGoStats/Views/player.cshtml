@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "_base";
}

<h1>@Model.Player.Name</h1>
<p class="lead">
    <i>Statistics for</i> @Model.Start <i>to</i> @Model.End
</p>

<table class="table table-dark table-striped stat-grid">
    <tbody>
        <tr>
            <td>Kills</td>
            <td>@Model.Kills</td>
        </tr>
        <tr>
            <td>Deaths</td>
            <td>@Model.Deaths</td>
        </tr>
        <tr>
            <td>Assists</td>
            <td>@Model.Assists</td>
        </tr>
    </tbody>
</table>
