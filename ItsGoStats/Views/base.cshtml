@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ItsGoStats</title>
    <link rel="stylesheet" type="text/css" href="/content/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" type="text/css" href="/content/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/content/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" type="text/css" href="/content/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/Content/favicon.png" width="32" height="32" alt="" />
                ItsGoStats
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Games">Games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Players">Players</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Highlights">Highlights</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container pt-3">
        <div id="content-container">
            @RenderBody()
        </div>
    </div>

    <script src="/content/scripts/jquery-3.2.1.slim.min.js"></script>
    <script src="/content/scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
